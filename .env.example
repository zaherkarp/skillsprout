# Application
APP_NAME=SkillSprout
ENV=development
DEBUG=true
LOG_LEVEL=INFO

# API
API_HOST=0.0.0.0
API_PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://skillsprout:skillsprout@localhost:5432/skillsprout
DATABASE_URL_SYNC=postgresql+psycopg2://skillsprout:skillsprout@localhost:5432/skillsprout

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# O*NET Web Services
ONET_USERNAME=your_username_here
ONET_PASSWORD=your_password_here
ONET_BASE_URL=https://services.onetcenter.org/ws
ONET_TIMEOUT=30
ONET_MAX_RETRIES=3

# Demo Mode (set to true to use mock data if O*NET credentials not available)
DEMO_MODE=false

# Model Configuration
MODEL_VERSION=v1_baseline
MODEL_TRAINING_MIN_SAMPLES=50
EXPLORATION_EPSILON=0.1

# Scoring Thresholds
READY_NOW_MATCH_THRESHOLD=75
READY_NOW_GAP_THRESHOLD=25
TRAINABLE_MATCH_MIN=50
TRAINABLE_MATCH_MAX=74
TRAINABLE_GAP_MIN=26
TRAINABLE_GAP_MAX=55

# Background Tasks
CACHE_WARM_BATCH_SIZE=50
PERIODIC_TRAINING_CRON="0 2 * * *"  # 2 AM daily
